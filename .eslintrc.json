{
  "env": {
    "browser":true
  },
  "parser": "babel-eslint",
  "plugins": ["react"],
  "extends": "airbnb",
  "rules": {
    "react/jsx-uses-vars": [2],
    "curly": ["error", "all"],
    "brace-style": ["error", "1tbs", { "allowSingleLine": true }],
    "no-multi-spaces": "error",
    "no-trailing-spaces": "error"
  }
}
